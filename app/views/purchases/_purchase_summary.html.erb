<div class="col-12 col-lg-4">
  <div class="cart-summary">
    
    <h5>Total</h5>
    
    <ul class="summary-table">

      <li>
          <span>subtotal:</span>
          <span>
              <%= "$#{@manager.value('precio_venta')}" %>
          </span>
      </li>

      <li>
          <span>
              Descuento:
          </span>
          <span>
              <%= "$#{@manager.value('descuento')}" %>
          </span>
      </li>

      <% if @coupon.present? %>
          <li>
              <span>
                  Descuento por cupon:
              </span>
              <span>
                  <%= "#{@manager.value('porcentajecupon')}%" %>
              </span>
          </li>
      <% end %>

      <li>
          <span>
              total:
          </span>
          <span>
              <%= "$#{@manager.value('precio_final')}" %>
          </span>
      </li>        

    </ul>

    <div class="cart-btn mt-100">
      <%= link_to 'Comprar', product_purchases_path(@product.id, params: { case_id: @manager.case_id }), method: :post, class: 'btn amado-btn w-100' %>
    </div>
  </div>
</div>